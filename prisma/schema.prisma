// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    String
  isDeleted Boolean
  Post      Posts[]
  role      String

  @@map("users")
}

model Posts {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  image     String?
  author    Users?   @relation(fields: [authorId], references: [email])
  authorId  String?
  likes     Int      @default(0)
  Comments  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean

  @@map("posts")
}
